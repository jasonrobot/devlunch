<h1>The polls are open!</h1>
<div class="signup-form">
  <%= form_for @user do |f| %>
    <%= render 'shared/error_messages' %>

    <%= f.label :name %>
    <%= f.text_field :name, class: "form_control" %>

    <%= f.label :handle %>
    <%= f.text_field :handle, class: "form_control" %>

    <%= f.label :pick %>
    <%= f.text_field :pick, class: "form_control" %>

    <%= f.submit "+1", class: "signup-form__submit__plusone", name: "plusone" %>
    <%= f.submit "Coming", class: "signup-form__submit__coming", name: "coming" %>

    <%= @user.errors.any? %>
  <% end %>
</div>
<div class="signed-up">
  <div class="signed-up__plusoned">
    <h3>+1'ed:</h3>
    <ul class="signed-up__plusoned">
      <% @plusoned.each do |user| %>
        <li class="signed-up__plusoned__user">
          <%= user.name %>, <%= user.handle %>, <%= user.pick %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="signed-up__coming">
    <h3>Coming, but not voting:</h3>
    <ul class="signed-up__coming">
      <% @coming.each do |user| %>
        <li class="signed-up__coming__user">
          <%= user.name %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
